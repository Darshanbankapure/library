// prisma/schema.prisma

model Book {
  id          Int        @id @default(autoincrement())
  title       String
  author      String
  published   DateTime
  isAvailable Boolean    @default(true)
  loans       Loan[]
}

model User {
  id       Int      @id @default(autoincrement())
  username String
  email    String   @unique
  password String
  loans    Loan[]
}

model Loan {
  id       Int      @id @default(autoincrement())
  userId   Int
  bookId   Int
  dueDate  DateTime
  returned Boolean
  user     User     @relation(fields: [userId], references: [id])
  book     Book     @relation(fields: [bookId], references: [id])
}
